%import common.DIGIT

INT: "0" | ("1".."9" DIGIT*)
SIGNED_INT: "-"? INT
FULL_SIGNED_INT: ["+"|"-"] INT

QUARTER: "." ("25" | "5" | "75")
QUARTERED_FLOAT: INT QUARTER?
SIGNED_QUARTERED_FLOAT: SIGNED_INT QUARTER?

SINGLE_FLOAT: INT "." DIGIT~1
SIGNED_SINGLE_FLOAT: SIGNED_INT "." DIGIT~1

FLOAT: INT ["." DIGIT+]
SIGNED_FLOAT: "-"? FLOAT
FULL_SIGNED_FLOAT: FULL_SIGNED_INT ["." DIGIT+]

NUMBER: INT | FLOAT
